# Soft Spherical Voronoi com Bayes (prior de volume)
import numpy as np
from scipy.special import softmax
import matplotlib.pyplot as plt
from mpl_toolkits.mplot3d import Axes3D

# Sites (mesmos 12)
np.random.seed(42)
num_sites = 12
theta = np.random.uniform(0, np.pi, num_sites)
phi = np.random.uniform(0, 2*np.pi, num_sites)
sites = np.array([np.sin(theta)*np.cos(phi),
                  np.sin(theta)*np.sin(phi),
                  np.cos(theta)]).T

# Grade fina
theta_grid, phi_grid = np.mgrid[0:np.pi:200j, 0:2*np.pi:400j]
x = np.sin(theta_grid) * np.cos(phi_grid)
y = np.sin(theta_grid) * np.sin(phi_grid)
z = np.cos(theta_grid)
points = np.stack((x, y, z), axis=-1).reshape(-1, 3)

# Prior baseado em "volume" (simulação simples: sites maiores têm prior maior)
prior = np.random.uniform(0.05, 0.2, num_sites)
prior /= prior.sum()  # normaliza

# Bayesian soft weights
def bayesian_soft_weights(points, sites, temperature=0.05, prior=None):
    if prior is None:
        prior = np.ones(len(sites)) / len(sites)
    dot = np.dot(points, sites.T)
    log_likelihood = dot / temperature
    log_posterior = log_likelihood + np.log(prior + 1e-12)
    return softmax(log_posterior, axis=1)

weights_bayes = bayesian_soft_weights(points, sites, temperature=0.05, prior=prior)
assigned_bayes = np.argmax(weights_bayes, axis=1)

# Plot
fig = plt.figure(figsize=(10, 8))
ax = fig.add_subplot(111, projection='3d')
scatter = ax.scatter(points[:,0], points[:,1], points[:,2], c=assigned_bayes, cmap='tab20', s=1)
ax.scatter(sites[:,0], sites[:,1], sites[:,2], c='red', s=100, label='Sites')
ax.set_title('Bayesian Soft Spherical Voronoi — Prior de Volume (T=0.05)')
ax.legend()
plt.colorbar(scatter, label='Subflux ID')
plt.show()